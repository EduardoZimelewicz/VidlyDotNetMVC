@model Vidly.ViewModels.CustomersViewModel

@{
    ViewData["Title"] = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Customers</h1>

@if (Model.Customers.Count == 0)
{
    <text>There is no customers registered yet</text>
}
else
{   
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Membership Type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Customers)
            {
            <tr>
                <!-- href="/Customers/Details/@@customer.Id">@@customer.Name -->
                <td>@Html.ActionLink(customer.Name, "Details", "Customers", new { id = customer.Id }) </td>
                <td>@customer.MembershipType.Name</td>
            </tr>
            }
        </tbody>
    </table>
}
