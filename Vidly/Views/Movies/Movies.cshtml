@model Vidly.ViewModels.MoviesViewModel

@{
    ViewData["Title"] = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Movies</h1>

<script runat="server">

</script>

<input type="button" class="btn btn-primary" 
       value= "New Movie" 
       onclick="location.href='@Url.Action("New","Movies")'"/>


@if (Model.Movies.Count == 0)
{
    <text>There is no movie yet</text>
}
else
{

    <table style="margin-top:10px" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model.Movies)
            {
            <tr>
                <td>@Html.ActionLink(@movie.Name, "Edit", "Movies", new { id = movie.Id }) </td>
                <td>@movie.Genre.Name</td>
            </tr>
            }
        </tbody>
    </table>
}


